.row
  .col-sm-2
  .col-sm-8
    .box.bg-bluegray
      %h3.text-center
        New Pitch
      .box-body
        = simple_form_for @pitch do |f|
          .body
            .form-group
              = f.input :pitch_to, input_html: { class: 'form-control', placeholder: "Pitch To", autofocus: "true" }
            .form-group
              = f.input :pitch_notes, input_html:  { class: 'form-control', placeholder: "Notes" }
            .form-group
              = f.input :email, input_html:  { class: 'form-control', placeholder: "Email Address" }
            .form-group
              = f.input :subject, input_html:  { class: 'form-control', placeholder: "Subject" }
            .form-group
              = f.input :message, input_html:  { class: 'form-control', placeholder: "Message" }
            .footer
              = f.button :submit, "Next", class: "btn btn-block btn-primary"
        .margin.text-center
  .col-sm-2