        %th Notes
      .col-sm-4
        %th Listened To
    .row
      .col-sm-4= @pitch.pitch_to
      .col-sm-4= @pitch.pitch_notes
      .col-sm-4= @pitch.listened_to
    .row.bg-email
      .col-sm-12
        .row
          .col-sm-2 Subject:
          .col-sm-10= " #{@pitch.subject}"
        .row
          .col-sm-2 Message:
          .col-sm-10= " #{@pitch.message}"
  .col-sm-2


