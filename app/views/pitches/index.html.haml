.row
  .col-sm-2
  .col-sm-8
    %h1 Pitches List

    .row
      .col-lg-12.table-responsive
        %table.table.table-bordered
          - if @pitches.length == 0
            No pitches exist, click 'Add' to create one
          - else
            %thead
              %th.text-center Pitch ID
              %th.text-center Sent To
              %th.text-center Sent On
              %th.text-center Listened To
              %th 
              %th
            %tbody.table-striped
            - @pitches.each do |pitch|
              %tr
                %td.text-center= pitch.id
                %td= pitch.pitch_to
                %td.text-center= pitch.created_at.strftime("%m/%d/%y %I:%H %p")
                %td.text-center= pitch.listened_to ? "Yes" : "No"
                %td.pitch-details= link_to "Details", pitch_path(pitch)
                %td.pitch-delete= link_to "Delete", pitch_path(pitch), method: :delete
      .col-sm-2
